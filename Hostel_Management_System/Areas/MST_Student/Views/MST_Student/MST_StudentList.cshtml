@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Student List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Student" asp-action="Index">Student List</a></li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Students</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn btn-primary" asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add"><i class="fa-solid fa-plus"></i>  Add Student</a>
                            <button type="submit" class="btn btn-warning">Room Allocation</button>
                        </div>
                        <div class="col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />
                    <table id="sample_1" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Contact No.</th>
                                <th>DOB</th>
                                <th>Age</th>
                                <th>Addresh</th>
                                <th>Room NO.</th>
                                <th>Status</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody id="sample_2">
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    <td>@dr["FullName"]</td>
                                    <td>@dr["Email"]</td>
                                    <td>@dr["ContactNo"]</td>
                                    <td>@Convert.ToDateTime(dr["Dob"]).ToString("dd-MM-yyyy")</td>
                                    <td>@dr["Age"]</td>
                                    <td>@dr["Address"]</td>
                                    <td>@dr["RoomNo"]</td>
                                    <td>@dr["Status"]</td>
                                    <td>
                                        <form method="post" asp-area="MST_Student" asp-controller="MST_Student" , asp-action="Delete">
                                            <input type="hidden" name="SId" value="@Convert.ToInt32(dr["SId"])" />
                                            <button type="submit" class="btn btn-danger btn-rounded" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="get" asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add">
                                            <input type="hidden" name="SId" value="@Convert.ToInt32(dr["SId"].ToString())">
                                            <button type="submit" class="btn btn-primary btn-rounded"><i class="fa fa-pen-to-square"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts
                                            {
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

