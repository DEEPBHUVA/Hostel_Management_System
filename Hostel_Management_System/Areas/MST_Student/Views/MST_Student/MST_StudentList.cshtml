@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<!-- Page header start -->
<div class="page-header">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">Home</li>
		<li class="breadcrumb-item">Tables</li>
		<li class="breadcrumb-item active">Table Hover</li>
	</ol>

	<ul class="app-actions">
		<li>
			<a href="#" id="reportrange">
				<span class="range-text"></span>
				<i class="icon-chevron-down"></i>
			</a>
		</li>
		<li>
			<a href="#">
				<i class="icon-export"></i>
			</a>
		</li>
	</ul>
</div>
<!-- Page header end -->
<!-- Main container start -->
<div class="main-container">

	<!-- Row start -->
	<div class="row gutters">
		<div class="col-12">

			<div class="card">
				<div class="card-body">
                    <div class="row">
                        <div class="col-10">
                            <h4><i class="fa-solid fa-gears"></i> Student List</h4>
                        </div>
                        <div class="col-2">
                            <a class="btn btn-primary px-4 " asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add"><i class="fa-solid fa-plus"></i>  Add Student</a>
                        </div>
                    </div>
                    <hr />
					<div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Contact No.</th>
                                    <th>DOB</th>
                                    <th>Age</th>
                                    <th>Addresh</th>
                                    <th>Room NO.</th>
                                    <th>Status</th>
                                    <th>Delete</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td>@dr["FullName"]</td>
                                        <td>@dr["Email"]</td>
                                        <td>@dr["ContactNo"]</td>
                                        <td>@dr["Dob"]</td>
                                        <td>@dr["Age"]</td>
                                        <td>@dr["Address"]</td>
                                        <td>@dr["RoomNo"]</td>
                                        <td>@dr["Status"]</td>
                                        <td>
                                            <form method="post" asp-area="MST_Student" asp-controller="MST_Student" , asp-action="Delete">
                                                <input type="hidden" name="SId" value="@Convert.ToInt32(dr["SId"])" />
                                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i></button>
                                            </form>
                                        </td>
                                        <td>
                                            <form method="get" asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add">
                                                <input type="hidden" name="SId" value="@Convert.ToInt32(dr["SId"].ToString())">
                                                <button type="submit" class="btn btn-primary"><i class="fa fa-pen-to-square"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
					</div>
				</div>
			</div>

		</div>
	</div>
	<!-- Row end -->

</div>
<!-- Main container end -->