@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Student List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Student" asp-action="Index">Student List</a></li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Students</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn btn-primary" asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add"><i class="fa-solid fa-plus"></i>  Add Student</a>
                            <button type="submit" class="btn btn-warning">Room Allocation</button>
                        </div>
                        <div class="col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />
                    @if (TempData["MST_Student_AlertMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["MST_Student_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["MST_Student_Delete_AlertMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["MST_Student_Delete_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <table id="sample_1" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Contact No.</th>
                                <th>Birth Date</th>
                                <th>Age</th>
                                <th>Nationlity</th>
                                <th>Aadharcard No.</th>
                                <th>Status</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody id="sample_2">
                            @if (Model.Rows.Count > 0)
                            {
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td><img src="@Url.Content(dr["PhotoPath"].ToString())" alt="@dr["StudentName"]" style="height:40px; width:40px; border-radius:50%;" /></td>
                                        <td>@dr["StudentName"]</td>
                                        <td>@dr["Email"]</td>
                                        <td>@dr["MobileNo"]</td>
                                        <td>@Convert.ToDateTime(dr["BirthDate"]).ToString("dd-MM-yyyy")</td>
                                        <td>@dr["Age"]</td>
                                        <td>@dr["Nationlity"]</td>
                                        <td>@dr["AadharCardNo"]</td>
                                        <td>@dr["isActive"]</td>
                                        <td>
                                            <form method="post" asp-area="MST_Student" asp-controller="MST_Student" , asp-action="Delete">
                                                <input type="hidden" name="StudentID" value="@Convert.ToInt32(dr["StudentID"])" />
                                                <button type="submit" class="btn btn-danger btn-rounded" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i></button>
                                            </form>
                                        </td>
                                        <td>
                                            <form method="get" asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add">
                                                <input type="hidden" name="StudentID" value="@Convert.ToInt32(dr["StudentID"].ToString())">
                                                <button type="submit" class="btn btn-primary btn-rounded"><i class="fa fa-pen-to-square"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <div class="w-full bg-danger p-2">
                                        <span style="font-size: 15px; color: white;">No Record Found</span>
                                        
                                    </div>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts
                                            {
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

