@{ 
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Students List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="MST_Student" asp-action="Index">Student List</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Student" asp-action="GetAllStudent">All Students</a></li>
        </ol>
    </nav>
</div>

<style>
    /* Table styles */
    #sample_1 {
        width: 100%;
        overflow: hidden;
        border-radius: 10px;
    }

    #sample_1 th {
        padding: 15px 0px 15px 0px;
    }

    #sample_1 th {
        background-color: darkblue; /* Header background color */
        color: #fff;
    }

    /* Alert styles */
    .alert {
        border-radius: 10px;
        margin-top: 20px;
    }

    /* No Record Found styles */
    .no-record {
        font-size: 15px;
        color: white;
    }
</style>

<section class="section">
    <div class="card">
        <div class="card-body">
            <form class="row align-items-end rounded px-1" method="POST" asp-area="MST_Student" asp-controller="MST_Student" asp-action="PR_MST_ALLStudent_Filter" asp-route-filter="true">
                <div>
                    <h5 class="card-title"><i class="fa-solid fa-filter"></i> Filter</h5>
                </div>
                <hr />

                <div class="col-md-3">
                    <label for="StudentName" class="form-label">Student Name</label>
                    <input type="text" name="StudentName" class="form-control" id="StudentName" placeholder="e.g. abc">
                </div>

                <div class="col-md-3">
                    <label for="Course" class="form-label">Email Name</label>
                    <input type="text" name="Email" class="form-control" id="Email" placeholder="e.g. demo@gmail.com">
                </div>

                <div class="col-md-2">
                    <label for="RoomNo" class="form-label">Age</label>
                    <input type="text" name="Age" class="form-control" id="Age" placeholder="e.g. 18">
                </div>

                <div class="col-md-2">
                    <button type="submit" title="Search" class="btn btn-success w-100">Search <i class="bi bi-search"></i></button>
                </div>
                <div class="col-md-2">
                    <button type="submit" asp-controller="MST_Student" asp-action="GetAllStudent" title="Clear" class="btn btn-danger w-100">Clear <i class="fa-solid fa-circle-xmark"></i></button>
                </div>
            </form>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> All Students</h5>
                    <div class="row">
                        
                        <div class="col-md-9">
                            <a class="btn btn-danger" asp-area="MST_Student" asp-controller="MST_Student" asp-action="CreatePdf"><i class="fa-solid fa-file-pdf"></i> Generate Pdf</a>
                            <a class="btn btn-success" asp-area="MST_Student" asp-controller="MST_Student" asp-action="ExportStudentsToExcel">
                                <i class="fa-solid fa-file-excel"></i><span> Export Excel</span>
                            </a>
                        </div>
                        <div class="pull-right col-md-3 my-2">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                   
                    @if (TempData["MST_Student_Delete_AlertMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["MST_Student_Delete_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <!-- Table with stripped rows -->
                    @if (Model.Rows.Count > 0)
                    {
                        <table id="sample_1" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Image</th>
                                    <th class="ps-2">Name</th>
                                    <th class="ps-2">Email</th>
                                    <th class="text-center">Contact No.</th>
                                    <th class="text-center">Birth Date</th>
                                    <th class="text-center">Age</th>
                                    <th class="ps-2">Nationlity</th>
                                    <th class="text-center">Aadharcard No.</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Action</th>
                                    
                                </tr>
                            </thead>
                            <tbody id="sample_2">
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td class="text-center"><img src="@Url.Content(dr["PhotoPath"].ToString())" alt="@dr["StudentName"]" style="height:40px; width:40px; border-radius:50%;" /></td>
                                        <td>@dr["StudentName"]</td>
                                        <td>@dr["Email"]</td>
                                        <td class="text-center">@dr["MobileNo"]</td>
                                        <td class="text-center">@Convert.ToDateTime(dr["BirthDate"]).ToString("dd-MM-yyyy")</td>
                                        <td class="text-center">@dr["Age"]</td>
                                        <td>@dr["Nationlity"]</td>
                                        <td class="text-center">@dr["AadharCardNo"]</td>
                                        <td class="text-center">
                                            <span class="badge @(dr["isActive"].ToString().Equals("True", StringComparison.OrdinalIgnoreCase) ? "bg-success" : "bg-danger")">
                                                @dr["isActive"]
                                            </span>
                                        </td>
                                        <td class="d-flex justify-content-between">
                                            <form method="get" asp-area="MST_Student" asp-controller="MST_Student" asp-action="ViewProfile">
                                                <input type="hidden" name="StudentID" value="@Convert.ToInt32(dr["StudentID"].ToString())">
                                                <button type="submit" class="btn btn-warning"><i class="bi bi-eye-fill"></i></button>
                                            </form>

                                            <form method="post" asp-area="MST_Student" asp-controller="MST_Student" , asp-action="Delete">
                                                <input type="hidden" name="StudentID" value="@Convert.ToInt32(dr["StudentID"])" />
                                                <button type="submit" class="btn btn-danger btn-rounded" onclick="return confirm('Are you sure you want to remove this?')"><i class="fa fa-trash"></i></button>
                                            </form>

                                            <form method="get" asp-area="MST_Student" asp-controller="MST_Student" asp-action="Add">
                                                <input type="hidden" name="StudentID" value="@Convert.ToInt32(dr["StudentID"].ToString())">
                                                <button type="submit" class="btn btn-primary btn-rounded"><i class="fa fa-pen-to-square"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <tr>
                            <div class="w-full p-2 rounded" style="background-color:tomato">
                                <i class="bi bi-x-circle-fill text-light"></i> <span style="font-size: 15px; color: white;">No Record Found</span>
                            </div>
                        </tr>
                    }
                    <hr />
                  
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-secondary btn-rounded px-4" asp-controller="MST_Student" asp-action="Cancle"><i class="bi bi-caret-left-fill"></i>Back</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}