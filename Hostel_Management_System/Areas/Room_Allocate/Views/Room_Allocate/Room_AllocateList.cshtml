@{
    ViewData["Title"] = "Room Allocate List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<style>
    .roombutton {
        background-color: cornflowerblue;
    }

    .roombutton:hover {
        background-color: cornflowerblue;
    }
</style>

<div class="pagetitle">
    <h1>Allocate List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="Room_Allocation" asp-action="Index">Allocate List</a></li>
        </ol>
    </nav>
</div>


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Allocation List</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn text-light roombutton" asp-area="Room_Allocate" asp-controller="Room_Allocate" asp-action="Add"><i class="bi bi-clipboard-plus-fill text-light"></i>  Allocate Room</a>
                            <a class="btn btn-secondary" asp-area="MST_Room" asp-controller="MST_Room" asp-action="Index"><i class="bi bi-list"></i>  Room List</a>
                        </div>
                        <div class="pull-right col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />
                    @if (TempData["RoomAllocation_AlertMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["RoomAllocation_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["RoomAllocation_Delete_AlertMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["RoomAllocation_Delete_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }


                    @if (Model.Rows.Count > 0)
                    {
                        <table id="sample_1" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Room No.</th>
                                    <th>Created</th>
                                    <th>Modified</th>
                                    @* <th>Deallocate</th> *@
                                    <th>Delete</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody id="sample_2">
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td>@dr["StudentName"]</td>
                                        <td>@dr["RoomNo"]</td>
                                        <td>@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yyyy")</td>
                                        <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yyyy")</td>
                                        
                                        <td>
                                            <form method="post" asp-area="Room_Allocate" asp-controller="Room_Allocate" , asp-action="Delete">
                                                <input type="hidden" name="RoomAllocateID" value="@Convert.ToInt32(dr["RoomAllocateID"])" />
                                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i></button>
                                            </form>
                                        </td>
                                        <td>
                                            <form method="get" asp-area="Room_Allocate" asp-controller="Room_Allocate" asp-action="Add">
                                                <input type="hidden" name="RoomAllocateID" value="@Convert.ToInt32(dr["RoomAllocateID"].ToString())">
                                                <button type="submit" class="btn btn-warning"><i class="fa fa-pen-to-square"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <tr>
                            <div class="w-full p-2 rounded bg-danger bg-opacity-75">
                                <i class="bi bi-x-circle-fill text-light"></i> <span style="font-size: 15px; color: white;">No Record Found</span>
                            </div>
                        </tr>
                    }
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}