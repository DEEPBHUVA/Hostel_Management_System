﻿@{
    ViewData["Title"] = "Course Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model Hostel_Management_System.Areas.MST_Course.Models.MST_CourseModel;

<div class="pagetitle">
	<h1>Student Add/Edit</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="MST_Course" asp-action="Index">Course List</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Course" asp-action="Add">Add</a></li>
		</ol>
	</nav>
</div>

<div class="card col-md-6">
    <div class="card-body p-3">
        <i class="bi bi-book-fill"></i> <span class="card-title">Course</span>
        <hr />
        <form role="form" method="post" asp-area="MST_Course" asp-controller="MST_Course" asp-action="Save">
            @Html.HiddenFor(x => x.CourseID)

            <div class="form-group">
                <label for="inputState"><span class="text-danger">*</span>Course Name</label>
                <input type="text" class="form-control" placeholder="Enter Course Name" asp-for="CourseName">
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk mx-1"></i> Save</button>
            <a class="btn btn-secondary" asp-controller="MST_Course" asp-action="Cancle"><i class="bi bi-caret-left-fill"></i> Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}