@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>User List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="SEC_User" asp-action="GetallUser">User List</a></li>
        </ol>
    </nav>
</div>

<style>

    /* Table styles */
    #sample_1 {
        width: 100%;
        overflow: hidden;
        border-radius: 10px;
    }

    #sample_1 th {
        padding: 15px 0px 15px 0px;
        text-align: left;
    }

    #sample_1 th {
        background-color: darkblue; /* Header background color */
        color: #fff;
    }

    /* Alert styles */
    .alert {
        border-radius: 10px;
        margin-top: 20px;
    }

    /* No Record Found styles */
    .no-record {
        font-size: 15px;
        color: white;
    }
</style>

<section class="section">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Users</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn btn-secondary" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Add"><i class="bi bi-credit-card-fill"></i>  Add User</a>
                        </div>
                        <div class="pull-right col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />
                    @if (TempData["SEC_User_AlertMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SEC_User_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["SEC_User_Delete_AlertMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["SEC_User_Delete_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (Model.Rows.Count > 0)
                    {
                        <table id="sample_1" class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="ps-2">Student Name</th>
                                    <th class="ps-2">First</th>
                                    <th class="ps-2">Last</th>
                                    <th class="ps-2">UserName</th>
                                    <th class="ps-2">Password</th>
                                    <th class="ps-2">User Role</th>
                                    <th class="text-center">Created</th>
                                    <th class="text-center">Modified</th>
                                    <th class="text-center">Action</th>

                                </tr>
                            </thead>
                            <tbody id="sample_2">
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td>@dr["StudentName"]</td>
                                        <td>@dr["FristName"]</td>
                                        <td>@dr["LastName"]</td>
                                        <td>@dr["UserName"]</td>
                                        <td>@dr["Password"]</td>
                                        <td>@dr["UserRole"]</td>
                                        <td class="text-center">@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yyyy")</td>
                                        <td class="text-center">@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yyyy")</td>
                                        <td class="d-flex justify-content-center align-items-center ">
                                            <form method="post" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Delete">
                                                <input type="hidden" name="UserID" value="@Convert.ToInt32(dr["UserID"])" />
                                                <button type="submit" class="btn btn-danger me-1" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash" style="font-size: 14px;"></i></button>
                                            </form>

                                            <form method="get" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Add">
                                                <input type="hidden" name="UserID" value="@Convert.ToInt32(dr["UserID"].ToString())">
                                                <button type="submit" class="btn btn-warning me-1"><i class="fa fa-pen-to-square" style="font-size: 14px;"></i></button>
                                            </form>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <tr>
                            <div class="w-full p-2 rounded bg-danger bg-opacity-75">
                                <i class="bi bi-x-circle-fill text-light"></i> <span style="font-size: 15px; color: white;">No Record Found</span>
                            </div>
                        </tr>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}