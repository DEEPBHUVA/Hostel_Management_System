@{
    ViewData["Title"] = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Employee List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Employee" asp-action="Index">Employee List</a></li>
        </ol>
    </nav>
</div>

<style>
    /* Add this style to your existing stylesheet or in a <style> tag in the head of your HTML */

    /* Table styles */
    #sample_1 {
        width: 100%;
        overflow: hidden;
        border-radius: 10px;
    }

    #sample_1 th{
        padding: 15px 0px 15px 0px;
        text-align: left;
            
    }
    #sample_1 th {
        background-color: darkblue; /* Header background color */
        color: #fff;
    }
    /* Alert styles */
    .alert {
        border-radius: 10px;
        margin-top: 20px;
    }

    /* No Record Found styles */
    .no-record {
        font-size: 15px;
        color: white;
    }
</style>

<section class="section">
    <div class="card">
        <div class="card-body">
            <form class="row align-items-end rounded px-1" method="POST" asp-area="MST_Employee" asp-controller="MST_Employee" asp-action="EmployeeFilter">
                <div>
                    <h5 class="card-title"><i class="fa-solid fa-filter"></i> Filter</h5>
                </div>
                <hr />

                <div class="col-md-3">
                    <label for="EmaployeeName" class="form-label">Emaployee Name</label>
                    <input type="text" name="EmaployeeName" class="form-control" id="EmaployeeName" placeholder="e.g. abc">
                </div>

                <div class="col-md-3">
                    <label for="JoiningDate" class="form-label">Date</label>
                    <input type="date" name="JoiningDate" class="form-control" id="JoiningDate" placeholder="e.g. 10-02-2024">
                </div>

                <div class="form-group col-md-2">
                    <label for="EmployeeType" class="form-label">Employee Type</label>
                    <input type="text" name="EmployeeType" class="form-control" id="EmployeeType" placeholder="e.g. Cook">
                </div>
                    

                <div class="col-md-2">
                    <button type="submit" title="Search" class="btn btn-success w-100">Search <i class="bi bi-search"></i></button>
                </div>
                <div class="col-md-2">
                    <button type="submit" asp-controller="MST_Employee" asp-action="Index" title="Clear" class="btn btn-danger w-100">Clear <i class="fa-solid fa-circle-xmark"></i></button>
                </div>
            </form>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Employee</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn btn-secondary" asp-area="MST_Employee" asp-controller="MST_Employee" asp-action="Add"><i class="bi bi-person-plus-fill"></i>  Add Employee</a>
                        </div>
                        <div class="pull-right col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />
                    @if (TempData["MST_Employee_AlertMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["MST_Employee_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["MST_EmployeeDelete_AlertMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["MST_EmployeeDelete_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.Rows.Count > 0)
                    {
                        <table id="sample_1" class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">Image</th>
                                    <th class="ps-2">Name</th>
                                    <th class="ps-2">Employee Type</th>
                                    <th class="ps-2">Salary</th>
                                    <th class="text-center">Joining Date</th>
                                    <th class="text-center">Contact No.</th>
                                    <th class="text-center">Birth Date</th>
                                    <th class="text-center">Age</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody id="sample_2">

                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td class="text-center"><img src="@Url.Content(dr["PhotoPath"].ToString())" alt="@dr["EmployeeName"]" style="height:40px; width:40px; border-radius:50%;" /></td>
                                        <td>@dr["EmployeeName"]</td>
                                        <td>@dr["EmployeeType"]</td>
                                        <td>@dr["Salary"]</td>
                                        <td class="text-center">@Convert.ToDateTime(dr["JoiningDate"]).ToString("dd-MM-yyyy")</td>
                                        <td class="text-center">@dr["MobileNo"]</td>
                                        <td class="text-center">@Convert.ToDateTime(dr["BirthDate"]).ToString("dd-MM-yyyy")</td>
                                        <td class="text-center">@dr["Age"]</td>
                                        <td class="text-center">
                                            @if ((bool)dr["isActive"])
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td class="d-flex justify-content-between">
                                            <form method="get" asp-area="MST_Employee" asp-controller="MST_Employee" asp-action="ViewProfile">
                                                <input type="hidden" name="EmployeeID" value="@Convert.ToInt32(dr["EmployeeID"].ToString())">
                                                <button type="submit" class="btn btn-warning"><i class="bi bi-eye-fill"></i></button>
                                            </form>

                                            <form method="post" asp-area="MST_Employee" asp-controller="MST_Employee" , asp-action="Delete">
                                                <input type="hidden" name="EmployeeID" value="@Convert.ToInt32(dr["EmployeeID"])" />
                                                <button type="submit" class="btn btn-danger btn-rounded" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i></button>
                                            </form>

                                            <form method="get" asp-area="MST_Employee" asp-controller="MST_Employee" asp-action="Add">
                                                <input type="hidden" name="EmployeeID" value="@Convert.ToInt32(dr["EmployeeID"].ToString())">
                                                <button type="submit" class="btn btn-primary btn-rounded"><i class="fa fa-pen-to-square"></i></button>
                                            </form>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <tr>
                            <div class="w-full p-2 rounded bg-danger bg-opacity-75">
                                <i class="bi bi-x-circle-fill text-light"></i> <span style="font-size: 15px; color: white;">No Record Found</span>
                            </div>
                        </tr>
                    }
                    <hr />
                    
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

