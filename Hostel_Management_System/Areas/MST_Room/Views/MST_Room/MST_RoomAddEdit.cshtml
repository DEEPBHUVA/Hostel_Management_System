﻿@{
    ViewData["Title"] = "Room Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model Hostel_Management_System.Areas.MST_Room.Models.MST_RoomModel;

<div class="pagetitle">
    <h1>Branch Add/Edit</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="MST_Branch" asp-action="Index">Branch List</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Branch" asp-action="Add">Add</a></li>
        </ol>
    </nav>
</div>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.25rem;
        color: #333;
    }

    label {
        font-weight: bold;
    }

    input[type="text"],
    input[type="date"],
    input[type="file"],
    select,
    textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    select {
        appearance: none;
    }
</style>

<div class="card col-md-6">
    <div class="card-body p-3">
        <i class="bi bi-door-closed-fill"></i> <span class="card-title">Rooms</span>
        <hr />
        <form role="form" method="post" asp-area="MST_Room" asp-controller="MST_Room" asp-action="Save">
            @Html.HiddenFor(x => x.RoomId)

            <div class="form-group">
                <label for="inputState"><span class="text-danger">*</span>Room No</label>
                <input type="text" class="form-control" placeholder="Enter Room No." asp-for="RoomNo">
                <span asp-validation-for="RoomNo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label for="inputState"><span class="text-danger">*</span>Capacity</label>
                <input type="text" class="form-control" placeholder="Enter Capacity" asp-for="Capacity">
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="inputState"><span class="text-danger">*</span>Seat Count</label>
                <input type="text" class="form-control" placeholder="Enter Seat Count" asp-for="SeatCount">
                <span asp-validation-for="SeatCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="inputState"><span class="text-danger">*</span>Status</label>
                <select class="form-control" asp-for="Status">
                    <option selected>Choose...</option>
                    <option value="True">Active</option>
                    <option value="False">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
           
            <br />
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk mx-1"></i> Save</button>
            <a class="btn btn-secondary" asp-controller="MST_Room" asp-action="Cancle"><i class="bi bi-caret-left-fill"></i> Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}