@{
    ViewData["Title"] = "Room List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Room List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Student" asp-action="Index">Room List</a></li>
        </ol>
    </nav>
</div>


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Rooms</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn btn-primary" asp-area="MST_Room" asp-controller="MST_Room" asp-action="Add"><i class="fa-solid fa-plus"></i>  Add Rooms</a>
                        </div>
                        <div class="col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />
                
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                @* <th>RoomID</th> *@
                                <th>Room No</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Delete</th>
                                <th>Edit</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    @* <td>@dr["RoomId"]</td> *@
                                    <td>@dr["RoomNo"]</td>
                                    <td>@dr["Status"]</td>
                                    <td>@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yyyy")</td>
                                    <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <form method="post" asp-area="MST_Room" asp-controller="MST_Room" , asp-action="Delete">
                                            <input type="hidden" name="RoomId" value="@Convert.ToInt32(dr["RoomId"])" />
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="get" asp-area="MST_Room" asp-controller="MST_Room" asp-action="Add">
                                            <input type="hidden" name="RoomId" value="@Convert.ToInt32(dr["RoomId"].ToString())">
                                            <button type="submit" class="btn btn-warning"><i class="fa fa-pen-to-square"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>