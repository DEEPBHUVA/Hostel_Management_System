@{
    ViewData["Title"] = "Payment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Fees List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Payment" asp-action="Index">Fees List</a></li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Fees</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn btn-secondary" asp-area="MST_Payment" asp-controller="MST_Payment" asp-action="Add"><i class="bi bi-credit-card-fill"></i>  Add Fees</a>
                        </div>
                        <div class="pull-right col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />
                    @if (TempData["MST_Payment_AlertMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["MST_Payment_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["MST_Payment_Delete_AlertMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["MST_Payment_Delete_AlertMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Student Name</th>
                                <th class="text-center">Fees Date</th>
                                <th class="text-center">Mobile No.</th>
                                <th>PaidBY</th>
                                <th>Amount</th>
                                <th>Remark</th>
                                <th class="text-center">Created</th>
                                <th class="text-center">Modified</th>
                                <th>Delete</th>
                                <th>Edit</th>

                            </tr>
                        </thead>
                        <tbody id="sample_2">
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    <td>@dr["StudentName"]</td>
                                    <td class="text-center">@dr["PaymentDate"]</td>
                                    <td class="text-center">@dr["MobileNo"]</td>
                                    <td>@dr["PaidBY"]</td>
                                    <td>@dr["Amount"]</td>
                                    <td>@dr["Remark"]</td>
                                    <td class="text-center">@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yyyy")</td>
                                    <td class="text-center">@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <form method="post" asp-area="MST_Payment" asp-controller="MST_Payment" , asp-action="Delete">
                                            <input type="hidden" name="PaymentID" value="@Convert.ToInt32(dr["PaymentID"])" />
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="get" asp-area="MST_Payment" asp-controller="MST_Payment" asp-action="Add">
                                            <input type="hidden" name="PaymentID" value="@Convert.ToInt32(dr["PaymentID"].ToString())">
                                            <button type="submit" class="btn btn-warning"><i class="fa fa-pen-to-square"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}