@{
    ViewData["Title"] = "Payment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="pagetitle">
    <h1>Fees List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active"><a asp-controller="MST_Payment" asp-action="Index">Fees List</a></li>
        </ol>
    </nav>
</div>

<style>

    /* Table styles */
    #sample_1 {
        width: 100%;
        overflow: hidden;
        border-radius: 10px;
    }

    #sample_1 th {
        padding: 15px 0px 15px 0px;
        text-align: left;
    }

    #sample_1 th {
        background-color: darkblue; /* Header background color */
        color: #fff;
    }

    /* Alert styles */
    .alert {
        border-radius: 10px;
        margin-top: 20px;
    }

    /* No Record Found styles */
    .no-record {
        font-size: 15px;
        color: white;
    }
</style>

<section class="section">
    <div class="card">
        <div class="card-body">
            <form class="row align-items-end rounded px-1" method="POST" asp-area="MST_Payment" asp-controller="MST_Payment" asp-action="PaymentFilter">
                <div>
                    <h5 class="card-title"><i class="fa-solid fa-filter"></i> Filter</h5>
                </div>
                <hr />

                <div class="col-md-3">
                    <label for="StudentName" class="form-label">Student Name</label>
                    <input type="text" name="StudentName" class="form-control" id="StudentName" placeholder="e.g. abc">
                </div>

                <div class="col-md-3">
                    <label for="PaymentDate" class="form-label">Date</label>
                    <input type="date" name="PaymentDate" class="form-control" id="PaymentDate" placeholder="e.g. 10-02-2024">
                </div>

                <div class="form-group col-md-2">
                    <label for="PaidBy" class="form-label">Paid By</label>
                    <select class="form-control" id="PaidBy" name="PaidBy" required>
                        <option selected disabled hidden>Choose...</option>
                        <option value="Cash">Cash</option>
                        <option value="Cheque">Cheque</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" title="Search" class="btn btn-success w-100">Search <i class="bi bi-search"></i></button>
                </div>
                <div class="col-md-2">
                    <button type="submit" asp-controller="MST_Payment" asp-action="Index" title="Clear" class="btn btn-danger w-100">Clear <i class="fa-solid fa-circle-xmark"></i></button>
                </div>
            </form>
        </div>
    </div>
</section>

<section class="section">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa-solid fa-gears"></i> Fees</h5>
                    <div class="row">
                        <div class="col-md-9">
                            <a class="btn btn-secondary" asp-area="MST_Payment" asp-controller="MST_Payment" asp-action="Add"><i class="bi bi-credit-card-fill"></i>  Add Fees</a>
                        </div>
                        <div class="pull-right col-md-3">
                            <div id="sample_1_filter" class="dataTables_filter">
                                <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
                            </div>
                        </div>
                    </div>
                    <hr />

                    <div class="row">
                        <div class="col-md-12">
                            <partial name="/Views/Error/_ShowAlert.cshtml" />
                        </div>
                    </div>

                    @if (Model.Rows.Count > 0)
                    {
                            <table id="sample_1" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="ps-2">Student Name</th>
                                        <th class="text-center">Fees Date</th>
                                        <th class="text-center">Mobile No.</th>
                                        <th class="ps-2">PaidBY</th>
                                        <th class="ps-2">Amount</th>
                                        
                                        <th class="ps-2">Bank</th>
                                        <th class="ps-2">ChequeNo</th>
                                        <th class="ps-2">ReceiptNo</th>
                                        <th class="text-center">Created</th>
                                        <th class="text-center">Modified</th>
                                        <th class="text-center">Action</th>

                                    </tr>
                                </thead>
                                <tbody id="sample_2">
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <tr>
                                            <td>@dr["StudentName"]</td>
                                            <td class="text-center">@dr["PaymentDate"]</td>
                                            <td class="text-center">@dr["MobileNo"]</td>
                                            <td>@dr["PaidBY"]</td>
                                            <td>@Convert.ToDecimal(dr["Amount"]).ToString("N2")</td>
                                           
                                            <td>@dr["BankName"]</td>
                                            <td>@dr["ChequeNo"]</td>
                                            <td>@dr["ReceiptNo"]</td>
                                            <td class="text-center">@Convert.ToDateTime(dr["Created"]).ToString("dd-MM-yyyy")</td>
                                            <td class="text-center">@Convert.ToDateTime(dr["Modified"]).ToString("dd-MM-yyyy")</td>
                                            <td class="d-flex justify-content-center align-items-center p-3">
                                                <form method="post" asp-area="MST_Payment" asp-controller="MST_Payment" , asp-action="Delete">
                                                    <input type="hidden" name="PaymentID" value="@Convert.ToInt32(dr["PaymentID"])" />
                                                    <button type="submit" class="btn btn-danger me-1" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash" style = "font-size: 14px;"></i></button>
                                                </form>

                                                <form method="get" asp-area="MST_Payment" asp-controller="MST_Payment" asp-action="Add">
                                                    <input type="hidden" name="PaymentID" value="@Convert.ToInt32(dr["PaymentID"].ToString())">
                                                    <button type="submit" class="btn btn-warning me-1"><i class="fa fa-pen-to-square" style="font-size: 14px;"></i></button>
                                                </form>

                                                <form method="get" asp-area="MST_Payment" asp-controller="MST_Payment" asp-action="CreatePdf">
                                                    <input type="hidden" name="PaymentID" value="@Convert.ToInt32(dr["PaymentID"].ToString())">
                                                    <button type="submit" class="btn text-light" style="background-color:darkslategrey"><i class="fa-solid fa-file-invoice" style="font-size: 14px;"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                    }
                    else
                    {
                        <tr>
                            <div class="w-full p-2 rounded bg-danger bg-opacity-75">
                                <i class="bi bi-x-circle-fill text-light"></i> <span style="font-size: 15px; color: white;">No Record Found</span>
                            </div>
                        </tr>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}