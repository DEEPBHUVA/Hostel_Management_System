﻿@{
	ViewData["Title"] = "Payment Add/Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model Hostel_Management_System.Areas.MST_Payment.Models.MST_PaymentModel;

<div class="pagetitle">
	<h1>Payment Add/Edit</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
			<li class="breadcrumb-item"><a asp-controller="MST_Payment" asp-action="Index">Payment List</a></li>
			<li class="breadcrumb-item active"><a asp-controller="MST_Payment" asp-action="Add">Add Payment</a></li>
		</ol>
	</nav>
</div>


<style>
	.card {
		border-radius: 10px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		margin-top: 20px;
	}

	.card-body {
		padding: 20px;
	}

	.card-title {
		font-size: 1.25rem;
		color: #333;
	}

	label {
		font-weight: bold;
	}

	input[type="text"],
	input[type="date"],
	input[type="file"],
	select,
	textarea {
		width: 100%;
		padding: 8px;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
	}

	select {
		appearance: none;
	}
</style>

<div class="card col-md-8">
    <div class="card-body p-3">
		<i class="bi bi-credit-card-fill"></i> <span class="card-title">Payment</span>
		<hr />
        <form role="form" method="post" asp-area="MST_Payment" asp-controller="MST_Payment" asp-action="Save">
            @Html.HiddenFor(x => x.PaymentID)

			

			<div class="row my-2">
				<div class="form-group col-8">
					<label for="inputState"><span class="text-danger">*</span>Student</label>
					<select class="form-control" asp-for="StudentID" asp-items="@(new SelectList(ViewBag.StudentList,"StudentID","StudentName"))">
						<option value="">Select Student</option>
					</select>
					<span asp-validation-for="StudentID" class="text-danger"></span>
				</div>

				<div class="form-group col-4">
					<label for="inputState"><span class="text-danger">*</span>Date</label>
					<input type="date" class="form-control" placeholder="Enter Date" asp-for="PaymentDate">
					<span asp-validation-for="PaymentDate" class="text-danger"></span>
				</div>
			</div>

			<div class="row my-2">
				<div class="form-group col-6">
					<label for="inputState"><span class="text-danger">*</span>Mobile No.</label>
					<input type="text" class="form-control" placeholder="Enter Mobile No." asp-for="MobileNo">
					<span asp-validation-for="MobileNo" class="text-danger"></span>
				</div>

				<div class="form-group col-md-6">
					<label for="inputState"><span class="text-danger">*</span>Payment Mode</label>
					<select class="form-control" asp-for="PaidBY" id="paidBySelect">
						<option selected>Choose...</option>
						<option value="Cash">Cash</option>
						<option value="Cheque">Cheque</option>
					</select>
					<span asp-validation-for="PaidBY" class="text-danger"></span>
				</div>
			</div>

			<div class="row my-2" id="chequeDetails" style="display: none;">
				<div class="form-group col-6">
					<label for="inputState"><span class="text-danger">*</span>Cheque No.</label>
					<input type="text" class="form-control" placeholder="Enter Cheque No." asp-for="ChequeNo">
					
				</div>

				<div class="form-group col-md-6">
					<label for="inputState"><span class="text-danger">*</span>Bank Name</label>
					<input type="text" class="form-control" placeholder="Enter Bank Name" asp-for="BankName">
					
				</div>
			</div>

			<div class="row my-2">
				<div class="form-group col-8">
					<label for="inputState"><span class="text-danger">*</span>Remark</label>
					<input type="text" class="form-control" placeholder="Enter Remark" asp-for="Remark">
					<span asp-validation-for="Remark" class="text-danger"></span>
				</div>

				<div class="form-group col-4">
					<label for="inputState"><span class="text-danger">*</span>Amount</label>
					<input type="text" class="form-control" placeholder="Enter Amount" asp-for="Amount">
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div>
			</div>

			<hr />

            <br />
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk mx-1"></i> Save</button>
            <a class="btn btn-secondary" asp-controller="MST_Payment" asp-action="Cancle"><i class="bi bi-caret-left-fill"></i> Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
	<script>
		document.getElementById('paidBySelect').addEventListener('change', function () {
			var chequeDetails = document.getElementById('chequeDetails');

			if (this.value === 'Cheque') {
				chequeDetails.style.display = 'flex';
			} else {
				chequeDetails.style.display = 'none';
			}
		});
	</script>
}